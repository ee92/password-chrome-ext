{
  "manifest_version": 2,
  "name": "HashPass",
  "description": "Generates your password using a master key.",
  "version": "1.0",
  "homepage_url": "https://github.com/lesspass/webextension",
  "icons": {
    "64": "img/logo.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+P"
      }
    }
  },
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "contact@lesspass.com",
      "strict_min_version": "48.0"
    }
  }
}
